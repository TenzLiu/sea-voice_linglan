<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/bg_realtime_item"
        android:id="@+id/bg"
        android:layout_marginEnd="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_15"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_gift"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/bg"
        app:layout_constraintEnd_toEndOf="@id/bg"
        app:layout_constraintTop_toTopOf="@id/bg"
        app:layout_constraintBottom_toBottomOf="@id/bg"
        android:layout_margin="@dimen/dp_10"/>
    <View
        android:id="@+id/bg_price"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_25"
        app:layout_constraintTop_toBottomOf="@id/bg"
        android:background="@drawable/bg_realtime_name"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="@id/bg"
        android:layout_marginHorizontal="@dimen/dp_8"
        app:layout_constraintEnd_toEndOf="@id/bg"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_price"
        app:layout_constraintTop_toTopOf="@id/bg_price"
        android:layout_marginTop="@dimen/dp_2"
        app:layout_constraintBottom_toBottomOf="@id/bg_price"
        app:layout_constraintStart_toStartOf="@id/bg_price"
        app:layout_constraintEnd_toEndOf="@id/bg_price"
        android:drawableStart="@drawable/yhc_small"
        android:drawablePadding="@dimen/dp_3"
        android:textColor="#E32727"
        android:text="0"
        android:textSize="11sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_7"
        android:id="@+id/tv_count"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="@dimen/sp_11"
        android:textColor="#FCEDD3"
        android:layout_marginEnd="@dimen/dp_5"/>
</androidx.constraintlayout.widget.ConstraintLayout>