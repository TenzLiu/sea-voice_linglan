<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/banner_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/ll_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/banner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/banner_other"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <android.support.constraint.Guideline
            android:id="@+id/guide1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.33" />

        <android.support.constraint.Guideline
            android:id="@+id/guide2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.66" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_1"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            app:actualImageScaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:placeholderImage="@color/bg_gray"
            app:roundedCornerRadius="4dp" />

        <TextView
            android:id="@+id/tv_title_1"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_gradient_gray"
            android:ellipsize="end"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="2dp"
            android:singleLine="true"
            android:text="测试女神"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_1"
            app:layout_constraintStart_toStartOf="@id/iv_1" />

        <TextView
            android:id="@+id/tv_count_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_hot_count"
            android:padding="2dp"
            android:text="房间人数：0"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_2"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="12dp"
            app:actualImageScaleType="centerCrop"
            app:layout_constraintStart_toEndOf="@id/guide1"
            app:layout_constraintTop_toTopOf="parent"
            app:placeholderImage="@color/bg_gray"
            app:roundedCornerRadius="4dp" />

        <TextView
            android:id="@+id/tv_title_2"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_gradient_gray"
            android:ellipsize="end"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="2dp"
            android:singleLine="true"
            android:text="测试女神"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_2"
            app:layout_constraintStart_toStartOf="@id/iv_2" />

        <TextView
            android:id="@+id/tv_count_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_hot_count"
            android:padding="2dp"
            android:text="房间人数：0"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@id/guide1"
            app:layout_constraintTop_toTopOf="parent" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_3"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="12dp"
            app:actualImageScaleType="centerCrop"
            app:layout_constraintStart_toEndOf="@id/guide2"
            app:layout_constraintTop_toTopOf="parent"
            app:placeholderImage="@color/bg_gray"
            app:roundedCornerRadius="4dp" />

        <TextView
            android:id="@+id/tv_title_3"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_gradient_gray"
            android:ellipsize="end"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="2dp"
            android:singleLine="true"
            android:text="测试女神"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_3"
            app:layout_constraintStart_toStartOf="@id/iv_3" />

        <TextView
            android:id="@+id/tv_count_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_hot_count"
            android:padding="2dp"
            android:text="房间人数：0"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@id/guide2"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>