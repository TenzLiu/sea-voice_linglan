<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/bg_white_10dp"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_40"
            android:background="#CBD9F7"/>
        <TextView
            android:id="@+id/left_fd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_24"
            android:textColor="#4BA6DC"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/center"
            android:text="0"/>
        <TextView
            android:id="@+id/left_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/center"
            app:layout_constraintTop_toBottomOf="@id/left_fd_tv"
            android:layout_marginTop="@dimen/dp_12"
            android:textColor="#9FA3B0"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="今日收益"/>
        <TextView
            android:id="@+id/right_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9FA3B0"
            android:textSize="@dimen/sp_14"
            android:text="收益余额"
            app:layout_constraintStart_toEndOf="@id/center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/left_title_tv"/>

        <TextView
            android:id="@+id/right_fd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_24"
            android:textColor="#4BA6DC"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/left_fd_tv"
            android:text="0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_white_10dp"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:paddingHorizontal="@dimen/dp_20"
        android:paddingVertical="@dimen/dp_25"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_12">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_color"
            android:drawablePadding="@dimen/dp_8"
            android:drawableLeft="@drawable/icon_gold_coin"
            android:text="今日流水"/>
        <TextView
            android:id="@+id/jrls_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_24"
            android:gravity="end"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:text="0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_white_10dp"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:paddingHorizontal="@dimen/dp_20"
        android:paddingVertical="@dimen/dp_25"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_12">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_color"
            android:drawablePadding="@dimen/dp_8"
            android:drawableLeft="@drawable/icon_gold_coin"
            android:text="本周流水"/>
        <TextView
            android:id="@+id/bzls_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_24"
            android:gravity="end"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:text="0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_white_10dp"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:paddingHorizontal="@dimen/dp_20"
        android:paddingVertical="@dimen/dp_25"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_12">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_color"
            android:drawablePadding="@dimen/dp_8"
            android:drawableLeft="@drawable/icon_gold_coin"
            android:text="本周收益"/>
        <TextView
            android:id="@+id/bzsy_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_24"
            android:gravity="end"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:text="0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <TextView
            android:id="@+id/df_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_mine_sex"
            android:gravity="center"
            android:text="兑换"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"

            />


        <TextView
            android:id="@+id/tx_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_30"
            android:background="@drawable/bg_half_green_20dp"
            android:gravity="center"
            android:text="提现"
            android:textColor="#00A078"
            android:textSize="@dimen/sp_12"

            />
    </LinearLayout>

</LinearLayout>