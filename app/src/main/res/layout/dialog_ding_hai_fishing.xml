<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_parent"
    android:layout_height="wrap_content">

    <io.github.xiaofeidev.round.RoundFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        app:rd_radius="@dimen/dp_20">
        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_donghai_fishing_bg"
            android:paddingBottom="@dimen/dp_10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/dp_80"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/iv_jackpot"
                    android:layout_width="@dimen/dp_55"
                    android:layout_height="@dimen/dp_35"
                    android:background="@mipmap/bg_yellow_left"
                    android:gravity="center"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_3"
                    android:text="奖池"
                    android:textColor="#FFFF62AE"/>

                <TextView
                    android:id="@+id/iv_record"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_width="@dimen/dp_55"
                    android:layout_height="@dimen/dp_35"
                    android:background="@mipmap/bg_yellow_left"
                    android:gravity="center"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_3"
                    android:text="记录"
                    android:textColor="#FFFF62AE"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp_80"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/iv_method"
                    android:layout_width="@dimen/dp_55"
                    android:layout_height="@dimen/dp_35"
                    android:background="@mipmap/bg_yellow_right"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_3"
                    android:text="规则"
                    android:textColor="#FFFF62AE"/>

                <TextView
                    android:id="@+id/iv_rankList"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_width="@dimen/dp_55"
                    android:layout_height="@dimen/dp_35"
                    android:background="@mipmap/bg_yellow_right"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_3"
                    android:text="榜单"
                    android:textColor="#FFFF62AE"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_3"
                android:paddingHorizontal="@dimen/dp_5"
                android:background="@mipmap/bg_coin_add">

                <ImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="@mipmap/jackpot_item_gold"/>

                <TextView
                    android:id="@+id/tv_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_11"
                    tools:text="000" />

                <ImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="@mipmap/icon_coin_add"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ll_coin"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:id="@+id/rv_count1"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_40"
                        android:background="@mipmap/bg_click_count"
                        android:text="合一次"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_5"
                        android:paddingHorizontal="@dimen/dp_5"
                        android:background="@drawable/bg_dialog_coin_gray">
                        <ImageView
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_12"
                            android:layout_marginStart="@dimen/dp_6"
                            android:src="@mipmap/jackpot_item_gold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dp_3"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_11"
                            android:text="50" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:id="@+id/rv_count10"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_40"
                        android:background="@mipmap/bg_click_count"
                        android:text="合十次"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_5"
                        android:paddingHorizontal="@dimen/dp_5"
                        android:background="@drawable/bg_dialog_coin_gray">
                        <ImageView
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_12"
                            android:layout_marginStart="@dimen/dp_6"
                            android:src="@mipmap/jackpot_item_gold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dp_3"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_11"
                            android:text="500" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:id="@+id/rv_count100"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_40"
                        android:background="@mipmap/bg_click_count"
                        android:text="合百次"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_5"
                        android:paddingHorizontal="@dimen/dp_5"
                        android:background="@drawable/bg_dialog_coin_gray">
                        <ImageView
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_12"
                            android:layout_marginStart="@dimen/dp_6"
                            android:src="@mipmap/jackpot_item_gold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dp_3"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_11"
                            android:text="5000" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rv_skip"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_25"
                android:layout_above="@+id/rl_count"
                android:layout_alignEnd="@+id/rl_count"
                android:layout_marginBottom="@dimen/dp_10">
                <TextView
                    android:id="@+id/tv_skip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:text="动画开关" />
                <ImageView
                    android:id="@+id/iv_skip"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_skip"
                    android:layout_marginStart="@dimen/dp_5"
                    android:src="@mipmap/icon_skip_off" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_treasure"
                android:layout_width="@dimen/dp_360"
                android:layout_height="@dimen/dp_360"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_dinghai_fishing_treasure"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/iv_anim"
                android:layout_width="@dimen/dp_360"
                android:layout_height="@dimen/dp_360"
                android:layout_centerInParent="true"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_effect"
                android:layout_width="@dimen/dp_360"
                android:layout_height="@dimen/dp_360"
                android:layout_centerInParent="true"
                android:visibility="gone"/>

        </RelativeLayout>

    </io.github.xiaofeidev.round.RoundFrameLayout>

    <TextView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_33"
        android:layout_marginTop="@dimen/dp_108"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@mipmap/icon_donghai_fishing_top"
        android:text="高级合成"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"/>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/dp_10"
        android:src="@mipmap/icon_dialog_close" />


</RelativeLayout>
