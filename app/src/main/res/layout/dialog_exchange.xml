<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_back_auction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <View
        android:id="@+id/view_message_d"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="5" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/bg_white_10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/iv_close_message_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:padding="@dimen/dp_5"
                android:src="@drawable/popup_close"
                android:visibility="visible" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:padding="@dimen/dp_5"
                    android:src="@drawable/icon_jb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="余额："
                    android:textColor="#ff1c2023"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_diamond_exchangeyou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#ff1c2023"
                    android:textSize="12sp" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="兑换浪花"
                android:textStyle="bold"
                android:textColor="#ff1c2023"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_topupone_topup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_close_message_d"
                android:paddingStart="@dimen/dp_3"
                android:paddingTop="@dimen/dp_2"
                android:paddingEnd="@dimen/dp_3"
                android:paddingBottom="@dimen/dp_2"
                android:textColor="#1C2023"
                android:textSize="@dimen/sp_12"
                android:visibility="visible" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_10"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/dp_16">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/icon_jb" />

            <EditText
                android:id="@+id/edt_number_exchangeyou"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@color/white"
                android:textColor="#000103"
                android:hint="@string/hint_number_exchangeyou"
                android:inputType="number"
                android:textSize="@dimen/sp_12"
                android:textColorHint="#9FA3B0"
                android:maxLength="8"
                android:maxLines="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@drawable/yhc_small" />

                <TextView
                    android:id="@+id/tv_show_exchangeyou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="#000103" />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dividing_line_color"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginHorizontal="@dimen/dp_16"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/dp_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="我的浪花："
                android:textColor="@color/black6"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_you_exchangeyou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black8"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_show1_exchangeyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:textColor="#ff9fa3b0"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:text="兑换比率 10 : 10，钻石数量必须是10的整数倍"
            android:textColor="#ff9fa3b0"
            android:textSize="11sp" />

        <Button
            android:id="@+id/btn_sure_exchangeyou"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_8"
            android:background="@drawable/bg_round_blue_18"
            android:text="确认兑换"
            android:textColor="#ffffffff"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>