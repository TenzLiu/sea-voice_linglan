        android:src="@mipmap/node_center" />

    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/node" />

</RelativeLayout>