<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signin_bg">

    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/signin_character"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/signin_calendar"
        app:layout_constraintTop_toTopOf="@id/btn_sign">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="已连续签到 0 天"
            android:textColor="#99000000"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="112dp"
            android:layout_marginEnd="22dp"
            android:ellipsize="none"
            android:gravity="center"
            android:singleLine="true"
            android:text="- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
            android:textColor="#CFCFCF"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:drawableTop="@drawable/selector_sign"
                android:gravity="center"
                android:text="1天"

                android:textColor="@color/selector_sign"
                android:textSize="12sp" />

            <View
                android:id="@+id/view_1"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginTop="28dp"
                android:layout_weight="1"
                android:background="@drawable/selector_sign_line" />

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:drawableTop="@drawable/selector_sign"
                android:gravity="center"
                android:text="2天"
                android:textColor="@color/selector_sign"
                android:textSize="12sp" />

            <View
                android:id="@+id/view_2"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginTop="28dp"
                android:layout_weight="1"
                android:background="@drawable/selector_sign_line" />

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:drawableTop="@drawable/selector_sign"
                android:gravity="center"
                android:text="3天"
                android:textColor="@color/selector_sign"
                android:textSize="12sp" />

            <View
                android:id="@+id/view_3"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginTop="28dp"
                android:layout_weight="1"
                android:background="@drawable/selector_sign_line" />

            <TextView
                android:id="@+id/tv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:drawableTop="@drawable/selector_sign"
                android:gravity="center"
                android:text="4天"
                android:textColor="@color/selector_sign"
                android:textSize="12sp" />

            <View
                android:id="@+id/view_4"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginTop="28dp"
                android:layout_weight="1"
                android:background="@drawable/selector_sign_line" />

            <TextView
                android:id="@+id/tv_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:drawableTop="@drawable/selector_sign"
                android:gravity="center"
                android:text="5天"
                android:textColor="@color/selector_sign"
                android:textSize="12sp" />

            <View
                android:id="@+id/view_5"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginTop="28dp"
                android:layout_weight="1"
                android:background="@drawable/selector_sign_line" />

            <TextView
                android:id="@+id/tv_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:drawableTop="@drawable/selector_sign"
                android:gravity="center"
                android:text="6天"
                android:textColor="@color/selector_sign"
                android:textSize="12sp" />

            <View
                android:id="@+id/view_6"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginTop="28dp"
                android:layout_weight="1"
                android:background="@drawable/selector_sign_line" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:drawableTop="@drawable/selector_sign"
                    android:gravity="center"
                    android:text="7天"
                    android:textColor="@color/selector_sign"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/signin_box" />
            </FrameLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/btn_sign"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/selector_sign_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_title" />
</androidx.constraintlayout.widget.ConstraintLayout>