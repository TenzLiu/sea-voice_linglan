<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/msg_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginStart="10dp"
        android:paddingVertical="@dimen/dp_8">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_header_allmsg"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            app:roundAsCircle="true"
            app:roundingBorderColor="#FFCE00"
            app:roundingBorderWidth="1.5dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/iv_header_allmsg"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/title_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name_allmsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="--"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_11" />


                <TextView
                    android:id="@+id/iv_grade_allmsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingVertical="@dimen/dp_1"
                    android:gravity="center"
                    android:text="勋章"
                    android:textColor="#fff"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/iv_charm_allmsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingVertical="@dimen/dp_1"
                    android:gravity="center"
                    android:text="勋章"
                    android:textColor="#fff"
                    android:textSize="11sp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_show_allmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name_allmsg"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="15dp"
                android:layout_toEndOf="@id/iv_header_allmsg"
                android:background="@drawable/chart_left_bg"
                android:paddingHorizontal="@dimen/dp_8"
                android:paddingVertical="@dimen/dp_6">


                <TextView
                    android:id="@+id/tv_show_allmsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大家来我们的房间唱歌呀～"
                    android:textColor="#1C2023"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_50"
                    android:layout_toRightOf="@+id/tv_show_allmsg"
                    android:background="@drawable/bg_round_go"
                    android:padding="@dimen/dp_5"
                    android:src="@drawable/go" />

            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/user_msg_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginStart="10dp"
        android:paddingVertical="@dimen/dp_8">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_user_header_allmsg"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            app:roundAsCircle="true"
            android:layout_alignParentRight="true"
            app:roundingBorderColor="#FFCE00"
            app:roundingBorderWidth="1.5dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="right"
            android:layout_toLeftOf="@+id/iv_user_header_allmsg"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/user_title_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user_name_allmsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="--"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/iv_user_charm_allmsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingVertical="@dimen/dp_1"
                    android:gravity="center"
                    android:text="勋章"
                    android:textColor="#fff"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/iv_user_grade_allmsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingVertical="@dimen/dp_1"
                    android:gravity="center"
                    android:text="勋章"
                    android:textColor="#fff"
                    android:textSize="11sp" />



            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_user_show_allmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name_allmsg"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="15dp"
                android:layout_toEndOf="@id/iv_header_allmsg"
                android:background="@drawable/chart_right_bg"
                android:paddingHorizontal="@dimen/dp_8"
                android:paddingVertical="@dimen/dp_6">


                <TextView
                    android:id="@+id/tv_user_show_allmsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大家来我们的房间唱歌呀～"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_50"
                    android:layout_toRightOf="@+id/tv_user_show_allmsg"
                    android:background="@drawable/bg_round_go"
                    android:padding="@dimen/dp_5"
                    android:visibility="gone"
                    android:src="@drawable/go" />

            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>