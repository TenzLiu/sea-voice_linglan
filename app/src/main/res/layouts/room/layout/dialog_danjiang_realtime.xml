<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/cl_bg"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_realtime_pool"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_52"
            android:layout_marginStart="12dp"
            android:minWidth="@dimen/dp_90"
            android:paddingHorizontal="@dimen/dp_14"
            android:background="@drawable/bg_left_radio_red">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_count"
                android:text="0"
                android:textColor="#9A4314"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="礼物数据"
                android:textSize="@dimen/sp_10"
                android:textColor="#9A4314"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_gift"
            android:layout_marginStart="@dimen/dp_18"
            android:layout_marginEnd="@dimen/dp_8"
            app:layout_constraintTop_toBottomOf="@id/ll_count"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_fortune"
            android:background="@drawable/tv_fortune"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dp_25"
            app:layout_constraintBottom_toBottomOf="@id/ll_count"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="@string/fortune"
            android:textColor="#80330A"
            android:textSize="@dimen/sp_10"
            android:gravity="bottom"
            android:paddingBottom="4dp"
            android:paddingStart="@dimen/dp_9"/>
        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_10"
            android:textColor="#088C9B"
            app:layout_constraintTop_toBottomOf="@id/rv_gift"
            android:text="@string/realtime_remark"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginHorizontal="30dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_ps"
            android:gravity="center"
            android:text="@string/realtime_remark1"
            android:textColor="#99088C9B"
            android:textSize="@dimen/sp_10"
            app:layout_constraintTop_toBottomOf="@id/tv_remark" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/red2"
            app:layout_constraintTop_toBottomOf="@id/tv_ps"
            android:text="@string/realtime_remark_red"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_30"
            android:gravity="center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_close"
        android:src="@drawable/close_realtime"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_24"/>
</LinearLayout>