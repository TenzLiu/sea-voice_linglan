<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_pk_voice"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_maxpk_voice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_45"
        android:layout_marginEnd="@dimen/dp_45"
        android:background="@drawable/bg_round5_white"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_tosmallpk_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:padding="@dimen/dp_5"
            android:src="@drawable/shrink" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_62"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/dp_62"
                android:layout_height="match_parent">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_oneimg_max_voice"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_62"
                    fresco:actualImageScaleType="centerCrop"
                    fresco:placeholderImage="@drawable/default_head"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:roundAsCircle="true" />

                <TextView
                    android:id="@+id/tv_onetype_max_voice"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_62"
                    android:background="@drawable/bg_round31_ban"
                    android:gravity="center"
                    android:text="--"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:visibility="invisible" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_pk_max_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="PK"
                    android:textColor="@color/black8"
                    android:textSize="@dimen/sp_20" />

                <TextView
                    android:id="@+id/tv_max_end_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="0s"
                    android:textColor="@color/black6"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="@dimen/dp_62"
                android:layout_height="match_parent">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_twoimg_max_voice"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_62"
                    fresco:actualImageScaleType="centerCrop"
                    fresco:placeholderImage="@drawable/default_head"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:roundAsCircle="true" />

                <TextView
                    android:id="@+id/tv_twotype_max_voice"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_62"
                    android:background="@drawable/bg_round31_ban"
                    android:gravity="center"
                    android:text="--"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginEnd="@dimen/dp_30">

            <TextView
                android:id="@+id/tv_onename_maxpk_voice"
                android:layout_width="@dimen/dp_62"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxEms="5"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/text_ff0"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold" />

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_1"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_twoname_maxpk_voice"
                android:layout_width="@dimen/dp_62"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxEms="5"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/text_ff0"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_maxpk_voice"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_4"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginEnd="@dimen/dp_30"
            android:progressDrawable="@drawable/progress_bar_layer_list" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_onenumber_pk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_3"
                android:text="0"
                android:textColor="@color/text_ff0"
                android:textSize="@dimen/sp_10" />

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_1"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_twonumber_pk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginEnd="@dimen/dp_30"
                android:text="0"
                android:textColor="@color/text_ff0"
                android:textSize="@dimen/sp_10" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_show_maxpk_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_8"
            android:text="--" />

        <TextView
            android:id="@+id/tv_show_clicker_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="--" />
    </LinearLayout>
</RelativeLayout>