<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_search_place"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/dp_10"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_back_place"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_10"
            android:src="@drawable/nav_back" />

        <EditText
            android:id="@+id/edt_search_palce"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@drawable/bg_round5_f2f"
            android:drawableStart="@drawable/search"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:hint="@string/hint_search_music"
            android:paddingStart="@dimen/dp_5" />

        <TextView
            android:id="@+id/tv_cancel_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:text="@string/tv_cancel" />
    </LinearLayout>

    <include layout="@layout/layout_recycler_top" />
</LinearLayout>