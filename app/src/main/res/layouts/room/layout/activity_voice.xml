<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_back_voice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/chat_room_bg9" />

    <ImageView
        android:id="@+id/iv_voiceback_voice"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true">

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_26" />

        <include layout="@layout/voice_top" />

        <include layout="@layout/voice_bottom" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_smallpk_voice"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_90"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_280"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_smallpk_voice"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_90"
            android:background="@drawable/bg_round5_white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_smallpk_show_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PK"
                    android:textColor="@color/black8"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_endtime_show_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_2"
                    android:text="0s"
                    android:textColor="@color/black6"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginEnd="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_onename_smallpk_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxEms="4"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="--"
                    android:textColor="@color/text_ff0"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold" />

                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_1"
                    android:layout_weight="1"
                    android:minWidth="@dimen/dp_15" />

                <TextView
                    android:id="@+id/tv_twoname_smallpk_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxEms="4"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="--"
                    android:textColor="@color/text_ff0"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_smallpk_voice"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_4"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginEnd="@dimen/dp_10"
                android:progressDrawable="@drawable/progress_bar_layer_list" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_onenumber_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_3"
                    android:text="0"
                    android:textColor="@color/text_ff0"
                    android:textSize="@dimen/sp_10" />

                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_1"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_twonumber_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:text="0"
                    android:textColor="@color/text_ff0"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_chat_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_chat_voice"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="horizontal">
            <!--            <TextView-->
            <!--                android:id="@+id/tv_chattype_voice"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:drawableEnd="@drawable/chat_up"-->
            <!--                android:drawablePadding="@dimen/dp_2"-->
            <!--                android:gravity="center_vertical"-->
            <!--                android:paddingStart="@dimen/dp_10"-->
            <!--                android:text="@string/hint_chat1_voice"-->
            <!--                android:textColor="@color/textColor3"-->
            <!--                android:visibility="visible" />-->
            <TextView
                android:id="@+id/tv_chattype_voice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/dp_2"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:text="@string/hint_chat1_voice"
                android:textColor="@color/textColor3"
                android:visibility="visible" />

            <EditText
                android:id="@+id/edt_input_mychat"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_6"
                android:layout_weight="1"
                android:background="@drawable/bg_chat_f2"
                android:hint="@string/hint_chat_voice"
                android:maxLength="140"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_7"
                android:paddingEnd="@dimen/dp_7"
                android:textColor="@color/textColor1A"
                android:textSize="@dimen/sp_12" />

            <Button
                android:id="@+id/btn_send_mychat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_6"
                android:background="@drawable/bg_round4_red"
                android:gravity="center"
                android:minWidth="@dimen/dp_60"
                android:text="@string/tv_send"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_chattype_voice"
            android:layout_width="@dimen/dp_68"
            android:layout_height="@dimen/dp_85"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_76"
                android:background="@drawable/bg_round5_white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_chat2_voice"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_38"
                    android:gravity="center"
                    android:text="@string/hint_chat2_voice"
                    android:textColor="@color/textColor3" />

                <include layout="@layout/view_line" />

                <TextView
                    android:id="@+id/tv_chat1_voice"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_38"
                    android:gravity="center"
                    android:text="@string/hint_chat1_voice"
                    android:textColor="@color/textColor3" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_50"
                android:src="@drawable/chat_white_down" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_input_back_voice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/chat_room_bg9"
        android:visibility="visible" />


    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lay_SVGAImageView_gift"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55000000"
        android:orientation="vertical"
        android:visibility="gone">

<!--        <com.opensource.svgaplayer.SVGAImageView-->
<!--            android:id="@+id/mSVGAImageView_gift"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:visibility="gone"-->
<!--            app:clearsAfterStop="true"-->
<!--            app:loopCount="1" />-->

        <LinearLayout
            android:id="@+id/lay_gift_svga"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:orientation="horizontal"/>

        <ImageView
            android:id="@+id/iv_show_gift"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_show_png"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_200"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_show_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/dp_50"
            android:layout_marginBottom="@dimen/dp_150"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_24" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_giftall_voice"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</RelativeLayout>