<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_80"
        android:text="@string/title_login"
        android:textSize="27sp"
        android:drawableStart="@drawable/hi_login"
        android:drawablePadding="@dimen/dp_12"
        android:gravity="center"
        android:textColor="#000103"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_50"
        android:paddingStart="@dimen/dp_15"
        android:layout_marginHorizontal="@dimen/dp_32"
        android:background="@drawable/round12_000103"
        android:paddingEnd="@dimen/dp_30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/tv_phone_login"
            android:visibility="gone"
            android:textColor="@color/black8"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_phone_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lucency"
            android:gravity="center_vertical"
            android:hint="@string/hint_oldphone_changephone"
            android:inputType="number"
            android:maxLength="11"
            android:maxLines="1"
            android:textSize="@dimen/sp_14"
            tools:ignore="TextFields" />


    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="20dp"
        android:paddingStart="@dimen/dp_15"
        android:layout_marginHorizontal="@dimen/dp_32"
        android:background="@drawable/round12_000103"
        android:paddingEnd="@dimen/dp_30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/tv_psd_login"
            android:visibility="gone"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_psd_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lucency"
            android:digits="@string/tv_digits"
            android:gravity="center_vertical"
            android:hint="@string/hint_psd_login"
            android:inputType="textPassword"
            android:maxLength="20"
            android:maxLines="1"
            android:textSize="@dimen/sp_14"
            tools:ignore="TextFields" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lay_getcode_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="@dimen/dp_22"
        android:paddingStart="@dimen/dp_15"
        android:background="@drawable/round12_000103"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_getcode_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:paddingVertical="@dimen/dp_5"
            android:paddingHorizontal="@dimen/dp_7"
            android:background="@drawable/getcode_bg"
            android:layout_centerVertical="true"
            android:text="@string/tv_getcode_forgetpass"
            android:textColor="#2980B9"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_getcode_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/tv_getcode_login"
            android:background="@color/lucency"
            android:gravity="center_vertical"
            android:hint="@string/hint_code_forgetpass"
            android:inputType="number"
            android:maxLength="6"
            android:maxLines="1"
            android:textSize="@dimen/sp_16"
            tools:ignore="TextFields" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        android:background="@color/bg_line"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:paddingStart="@dimen/dp_30"
        android:paddingEnd="@dimen/dp_30">


        <TextView
            android:id="@+id/tv_is_room_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:drawableStart="@drawable/selector_checkbox"
            android:drawablePadding="@dimen/dp_4"
            android:text="是否为厅主"
            android:visibility="gone"
            android:textColor="#000103"
            android:textSize="@dimen/sp_12" />


        <TextView
            android:id="@+id/tv_forget_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_5"
            android:text="@string/tv_forget_login"
            android:textColor="#2B2B2B"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginStart="@dimen/dp_44"
        android:layout_marginEnd="@dimen/dp_31"
        android:layout_marginTop="@dimen/dp_72"
        android:text="@string/tv_login" />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_8"
        android:text="@string/tv_register_login"
        android:textColor="#2980B9"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_login"
        android:layout_marginTop="@dimen/dp_65"
        android:layout_marginBottom="@dimen/dp_15"
        android:visibility="gone"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:text="其他登录方式"
            android:textColor="#000103"
            android:textSize="14.0sp"
             />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/layout_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_above="@id/layou_bottom"
        android:layout_marginBottom="25.0dip"
        android:visibility="gone"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_qq_loging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_login_qq" />

        <ImageView
            android:id="@+id/img_wx_loging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30.0dip"
            android:src="@drawable/ic_login_weixin" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layou_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录即表示同意"
            android:textColor="#000103"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/tv_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="《 惊涛用户协议》"
            android:textColor="#2980B9"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

</LinearLayout>