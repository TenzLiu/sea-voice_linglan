<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:layout_width="@dimen/dp_72"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_height="@dimen/dp_72"
        android:src="@drawable/alipay"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_name"
        android:textColor="#1C2023"
        android:textSize="@dimen/sp_12"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_14"
        android:paddingEnd="@dimen/dp_14">



        <EditText
            android:id="@+id/edt_name_bindalipay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:hint="@string/hint_name_bindalipay"
            android:maxLength="8"
            android:maxLines="1"
            android:textColor="@color/black8"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@color/bg_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付宝账号（手机号）"
        android:textColor="#1C2023"
        android:textSize="@dimen/sp_12"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_14"
        android:paddingEnd="@dimen/dp_14">

        <EditText
            android:id="@+id/edt_alipay_bindalipay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:hint="@string/hint_alipay_bindalipay"
            android:maxLines="1"
            android:textColor="@color/black8"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@color/bg_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_code_forgetpass"
        android:textColor="#1C2023"
        android:textSize="@dimen/sp_12"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_14"
        android:paddingEnd="@dimen/dp_14">



        <EditText
            android:id="@+id/edt_code_bindalipay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="@string/hint_code_bindalipay"
            android:inputType="number"
            android:maxLength="6"
            android:maxLines="1"
            android:textColor="@color/black8"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_getcode_bindalipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingVertical="@dimen/dp_5"
            android:paddingHorizontal="@dimen/dp_7"
            android:background="@drawable/getcode_bg"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="@string/tv_getcode_forgetpass"
            android:textColor="#2980B9"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/btn_sure_bindalipay"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="@string/tv_bind"
        android:textSize="@dimen/sp_14" />
</LinearLayout>