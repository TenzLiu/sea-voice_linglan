<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white_color"
    android:orientation="vertical">




    <RelativeLayout
        android:id="@+id/gaosi_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_380">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_380"
            android:scaleType="centerCrop"
            android:id="@+id/iv_gapsi"/>


        <LinearLayout
            android:id="@+id/ll_back_personshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_26" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42">

                <ImageView
                    android:id="@+id/iv_back_personhome"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/icon_back" />

                <TextView
                    android:id="@+id/tv_data_personhome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:padding="@dimen/dp_5"
                    android:text="@string/title_data"
                    android:textSize="@dimen/sp_12"
                    android:drawableStart="@drawable/me_edit"
                    android:drawablePadding="@dimen/dp_2"
                    android:textColor="@color/white"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_data_personhome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:padding="@dimen/dp_5"
                    android:src="@drawable/more"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="230dp"
        android:background="@drawable/gaoshi_bg"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_show_personhome"
            android:layout_width="match_parent"
            android:layout_below="@+id/ll_back_personshow"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_16">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/draweeview_rl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_12">
                    </RelativeLayout>


                    <TextView
                        android:id="@+id/tv_name_personhome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_48"
                        android:layout_toRightOf="@id/draweeview_rl"
                        android:text="--"
                        tools:text="测试人"
                        android:textStyle="bold"
                        android:textColor="#2B2B2B"
                        android:textSize="@dimen/sp_16" />
                    <ImageView
                        android:id="@+id/iv_sex_personhome"
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_12"
                        android:layout_toEndOf="@id/tv_name_personhome"
                        android:layout_alignBottom="@id/tv_name_personhome"
                        android:layout_marginStart="@dimen/dp_25"
                        android:layout_marginBottom="@dimen/dp_2"
                        android:background="@drawable/bg_round_white"
                        android:padding="@dimen/dp_1"
                        android:src="@drawable/selector_man" />

                    <LinearLayout
                        android:id="@+id/tag_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_name_personhome"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_toRightOf="@id/draweeview_rl"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/nianji_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/xing_zuo_bg"
                            android:paddingHorizontal="@dimen/dp_8"
                            android:paddingVertical="@dimen/dp_3"
                            android:text="25岁"
                            android:textColor="#ffffffff"
                            android:textSize="10sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_cons_personhome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/xing_zuo_bg"
                            android:paddingHorizontal="@dimen/dp_8"
                            android:paddingVertical="@dimen/dp_3"
                            android:text="水瓶座"
                            android:visibility="gone"
                            android:textColor="#ffffffff"
                            android:textSize="10sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_find_personhome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="right"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:orientation="horizontal"
                        android:visibility="visible">


                        <TextView
                            android:id="@+id/tv_find_personhome"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_28"
                            android:background="@drawable/find_bg"
                            android:drawablePadding="@dimen/dp_6"
                            android:gravity="right|center_vertical"
                            android:paddingLeft="@dimen/dp_12"
                            android:paddingRight="@dimen/dp_10"
                            android:text="去找Ta"
                            android:textColor="#ffffffff"
                            android:textSize="14sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_room_personhome"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_28"
                            android:background="@drawable/fangjian_bg"
                            android:drawablePadding="@dimen/dp_6"
                            android:gravity="right|center_vertical"
                            android:paddingLeft="@dimen/dp_12"
                            android:paddingRight="@dimen/dp_10"
                            android:visibility="gone"
                            android:text="TA的房间"
                            android:layout_marginStart="8dp"
                            android:textColor="#ffffffff"
                            android:textSize="12sp" />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_alignStart="@id/tv_name_personhome"
                        android:layout_below="@id/tv_name_personhome"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/liang_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_marginRight="@dimen/dp_2"
                            android:src="@drawable/liang_id"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID:"
                            android:textColor="#2B2B2B"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tv_roomid_personhome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2233445"
                            android:textColor="#2B2B2B"
                            android:textSize="10sp" />
                        <ImageView
                            android:id="@+id/iv_grade_personhome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:paddingVertical="@dimen/dp_1"
                            android:paddingLeft="@dimen/dp_8"
                            android:textColor="#fff"
                            android:textSize="11sp" />

                        <ImageView
                            android:id="@+id/iv_charm_personhome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_4"
                            android:gravity="center"
                            android:paddingVertical="@dimen/dp_1"
                            android:paddingLeft="@dimen/dp_8"
                            android:textColor="#fff"
                            android:textSize="11sp" />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_signer_personhome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_toStartOf="@id/ll_signers_personhome"
                        android:hint="@string/hint_signer_personhome"
                        android:textColor="#9FA3B0"
                        android:layout_alignStart="@id/tv_name_personhome"
                        android:layout_below="@id/ll_id"
                        android:textColorHint="#9FA3B0"
                        android:textSize="12sp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_6"
                        android:orientation="horizontal"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@id/tv_name_personhome">


                        <LinearLayout
                            android:id="@+id/rl_fans_personhome"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_clicker"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/dp_5">

                            <TextView
                                android:id="@+id/tv_fans_personhome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#444444"
                                android:textStyle="bold"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_5"
                                android:text="粉丝"
                                android:textColor="#9FA3B0"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rl_attention_personhome"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:background="@drawable/bg_clicker"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/dp_5">

                            <TextView
                                android:id="@+id/tv_attention_personhome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textStyle="bold"
                                android:textColor="#444444"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_5"
                                android:text="关注"
                                android:textColor="#9FA3B0"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>



                    <RelativeLayout
                        android:id="@+id/ll_signers_personhome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_10"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/ll_id"
                        android:layout_marginTop="@dimen/dp_18"
                        android:paddingRight="@dimen/dp_10">

                        <LinearLayout
                            android:id="@+id/rl_signers_personhome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:visibility="gone"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_signers_personhome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/iv_play_voice"
                                android:padding="@dimen/dp_5"/>

                            <TextView
                                android:id="@+id/tv_number_personhome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#444444"
                                android:visibility="gone"
                                android:textSize="@dimen/sp_11" />
                            <TextView
                                android:id="@+id/tv_changesingers_personhome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dp_5"
                                android:textColor="#444444"
                                android:text="@string/tv_change_personhome"
                                android:textSize="@dimen/sp_11" />
                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">



            <LinearLayout
                android:id="@+id/ll_room_personhome"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_10"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_room_personhome"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_10"
                    fresco:actualImageScaleType="centerCrop"
                    fresco:placeholderImage="@drawable/default_head"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:roundAsCircle="true"
                    fresco:roundingBorderColor="@color/white"
                    fresco:roundingBorderWidth="@dimen/dp_1" />

                <TextView
                    android:id="@+id/tv_roomname_personhome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:text="进入聊天室 >"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="相册（6）"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:textColor="#ffffffff"
                    android:textSize="12sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:paddingLeft="@dimen/dp_2"
                    android:layout_marginTop="@dimen/dp_16"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_photo"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="match_parent"
                        android:drawableBottom="@drawable/title_bar_line"
                        android:gravity="center"
                        android:text="相册"
                        android:textColor="@color/tvCommon"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_nomal_gift"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/tv_nomal_gift"
                        android:textColor="@color/tv2B"
                        android:textSize="@dimen/sp_12" />



                    <TextView
                        android:id="@+id/tv_packet_gift"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="道具"
                        android:textColor="@color/tv2B"
                        android:textSize="@dimen/sp_12" />


                </LinearLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_8"
                    android:minHeight="@dimen/dp_180">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/mRecyclerView_gift_personhome"
                        android:layout_width="match_parent"
                        android:visibility="gone"

                        android:layout_height="wrap_content">

                    </androidx.recyclerview.widget.RecyclerView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/mRecyclerView_prop_personhome"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="wrap_content">

                    </androidx.recyclerview.widget.RecyclerView>



                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/mRecyclerView_personhome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_10" />
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom_personhome"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:paddingVertical="@dimen/dp_6"
            android:paddingHorizontal="@dimen/dp_60"
            android:orientation="horizontal"
            android:visibility="gone">



            <RelativeLayout
                android:id="@+id/rl_addattention_personhome"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:background="@drawable/bg_green_20dp"
                android:layout_weight="1"
              >

                <TextView
                    android:id="@+id/tv_isattention_personhome"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:drawableStart="@drawable/white_add"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center"
                    android:text="@string/tv_attention_personhome"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_chat_personhome"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_25"
                android:background="@drawable/bg_half_green_20dp"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/tv_chat_personhome"
                    android:textColor="@color/tvCommon"
                    android:textSize="@dimen/sp_14"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_show_personhome"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/default_head"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundAsCircle="true"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_190"
        fresco:roundingBorderColor="@color/white"
        fresco:roundingBorderWidth="@dimen/dp_3" />
</FrameLayout>