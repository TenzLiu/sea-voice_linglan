<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_10">

    <TextView
        android:id="@+id/tv_name_gifthis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:text="--"
        android:textColor="@color/tvCommon"
        android:textStyle="bold"
       android:textSize="14sp"/>


    <TextView
        android:id="@+id/hint_tv"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_name_gifthis"
        android:text=""
        android:textColor="#1C2023"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/tv_time_gifthis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name_gifthis"
        android:layout_marginTop="@dimen/dp_3"
        android:text="--"
        android:textColor="#9FA3B0"
        android:textSize="@dimen/sp_12" />



    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_show_gifthis"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_toStartOf="@id/tv_money_gifthis"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_8"
       />


    <TextView
        android:id="@+id/tv_money_gifthis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_centerVertical="true"
        android:text="-dsafdsafsadfas-"
        android:textColor="#000103"
        android:textStyle="bold"
        android:textSize="@dimen/sp_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_line" />
</RelativeLayout>