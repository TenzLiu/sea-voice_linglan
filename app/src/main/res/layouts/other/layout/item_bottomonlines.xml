<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    android:background="@drawable/bg_clicker"
    android:paddingStart="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_10">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_show_onlines"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_centerVertical="true"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/default_head"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundAsCircle="true" />

    <ImageView
        android:id="@+id/iv_sex_onlines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/iv_show_onlines"
        android:layout_alignBottom="@id/iv_show_onlines"
        android:src="@drawable/selector_man" />

    <TextView
        android:id="@+id/tv_name_onlines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_show_onlines"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_toEndOf="@id/iv_show_onlines"
        android:textColor="@color/white" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name_onlines"
        android:layout_alignStart="@id/tv_name_onlines"
        android:layout_marginTop="@dimen/dp_4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_type_onlines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_5"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_upmic_onlines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round2_c44a"
            android:drawableStart="@drawable/icon_mic"
            android:drawablePadding="@dimen/dp_2"
            android:padding="@dimen/dp_3"
            android:text="@string/tv_up_bottomshow"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_8"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_state_onlines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:background="@drawable/bg_round2_c90d"
            android:drawableStart="@drawable/icon_manager"
            android:drawablePadding="@dimen/dp_2"
            android:padding="@dimen/dp_3"
            android:text="管理员"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_8"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_leave_onlines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:background="@drawable/bg_round2_gray"
            android:padding="@dimen/dp_3"
            android:text="暂时离开"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_8"
            android:visibility="gone" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_endshow_onlines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_alignStart="@id/tv_name_onlines"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_line" />
</RelativeLayout>