<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000">

    <RelativeLayout
        android:id="@+id/rl_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/bg_round5_white">

        <TextView
            android:id="@+id/tv_hinttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:text="输入密码"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/edt_pass_roompass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@id/tv_hinttitle"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/bg_round5_f2f"
            android:gravity="center"
            android:hint="请输入房间密码"
            android:inputType="number"
            android:maxLength="8"
            android:maxLines="1"
            android:textColor="@color/black8" />

        <LinearLayout
            android:id="@+id/ll_show"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@id/edt_pass_roompass"
            android:layout_marginTop="@dimen/dp_15">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.6"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:text="取消"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_18"
                android:background="@color/bg_line"

                />

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:text="确定"
                android:textColor="@color/text_ff0"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_below="@id/edt_pass_roompass"
            android:layout_marginStart="@dimen/dp_27"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_27"
            android:background="@color/bg_line" />

    </RelativeLayout>

</RelativeLayout>