<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_back_gift"
    android:layout_width="match_parent"
    android:layout_marginVertical="@dimen/dp_8"
    android:layout_height="@dimen/dp_115"

    android:layout_marginHorizontal="@dimen/dp_5">

    <RelativeLayout
        android:id="@+id/git_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lw_item_bg">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_gift_gift"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_3" />

        <TextView
            android:id="@+id/tv_numbershow_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_gift_gift"
            android:layout_alignEnd="@id/iv_gift_gift"
            android:background="@drawable/bg_round5_ff00ff"
            android:paddingStart="@dimen/dp_5"
            android:paddingTop="@dimen/dp_1"
            android:paddingEnd="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_1"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_8"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_name_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_gift_gift"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_4"
            android:text="--"
            android:textColor="@color/white8"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_price_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_gift"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_4"
            android:text="--"
            android:drawablePadding="@dimen/dp_1"
            android:drawableStart="@drawable/yhc_small"
            android:textColor="#55B089"
            android:textSize="@dimen/sp_11" />
        <View
            android:id="@+id/view_select_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_ffo_1"
            android:visibility="invisible" />

    </RelativeLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_3"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_type1_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tag1" />

        <ImageView
            android:id="@+id/iv_type2_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_2"
            android:src="@drawable/tag2" />

        <ImageView
            android:id="@+id/iv_type3_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_2"
            android:src="@drawable/tag3" />
    </LinearLayout>


</RelativeLayout>