<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_68"
    android:background="@drawable/bg_clicker"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_10">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/redpacket2" />

    <TextView
        android:id="@+id/tv_name_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_15" />

    <TextView
        android:id="@+id/tv_time_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name_receive"
        android:layout_alignStart="@id/tv_name_receive"
        android:layout_marginTop="@dimen/dp_2"
        android:textColor="@color/textColor6"
        android:textSize="@dimen/sp_12" />
</RelativeLayout>