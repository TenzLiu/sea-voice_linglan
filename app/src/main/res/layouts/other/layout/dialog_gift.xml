                android:textColor="@color/FFAB00"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/total_gifts_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_toRightOf="@+id/tv_gold_gift"
                android:text="9999"
                android:textColor="#ffffffff"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/ll_send_gift"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@drawable/bg_round4_whit41"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_14"
                    android:text="@string/tv_send_gift"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_send_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_marginEnd="@dimen/dp_14"
                    android:drawableEnd="@drawable/unfold"
                    android:drawablePadding="@dimen/dp_9"
                    android:ellipsize="end"
                    android:maxEms="5"
                    android:maxLines="1"
                    android:text="--"
                    android:textColor="@color/EFBC2B"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sendto_gift"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@drawable/bg_round5_752_1"
                android:orientation="horizontal">


                <RelativeLayout
                    android:id="@+id/tv_number_gift_rl"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/dp_8">

                    <TextView
                        android:id="@+id/tv_number_gift"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12" />


                    <ImageView
                        android:id="@+id/img_number_gift"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_toRightOf="@+id/tv_number_gift"
                        android:src="@drawable/unfold" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_sendto_gift"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_round4_right"
                    android:gravity="center"
                    android:text="@string/tv_sendto_gift"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_sendpacket_gift"
                android:layout_width="60dp"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@drawable/bg_round5_ff0"
                android:gravity="center"
                android:text="@string/tv_sendto_gift"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

