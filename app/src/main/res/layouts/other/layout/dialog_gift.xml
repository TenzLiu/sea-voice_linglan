                    android:textColor="@color/white6"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone" />

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_12"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white1"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_party_gift"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/tv_party_gift"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_12"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white1"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_packet_gift"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/tv_packet_gift"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_12"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white1"
                    android:visibility="gone" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingEnd="@dimen/dp_10">


                <TextView
                    android:id="@+id/tv_data_gift"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/bg_round5_ffo1"
                    android:gravity="center"
                    android:text="@string/tv_data_gift"
                    android:textColor="@color/text_ff0"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_sendall_gift"
                    android:layout_width="@dimen/dp_72"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:background="@drawable/qm_bg"
                    android:gravity="center"
                    android:text="一键全刷"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_give_gift"
                    android:layout_width="@dimen/dp_72"
                    android:layout_height="@dimen/dp_24"
                    android:layout_toLeftOf="@id/tv_sendall_gift"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:background="@drawable/shape_r12_9871ff_s3_1c2023"
                    android:gravity="center"
                    android:text="转赠记录"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_packet_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dp_7"
                    android:layout_marginEnd="@dimen/dp_60"
                    android:padding="@dimen/dp_5"
                    android:src="@drawable/packet_gift"
                    android:visibility="invisible" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_allmic_gift"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginVertical="@dimen/dp_3"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/ll_allmic_gift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dp_14">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="送给"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_11" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mRecyclerView_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_5">


                </androidx.recyclerview.widget.RecyclerView>


                <TextView
                    android:id="@+id/tv_allmic_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/allmic_gift_bg"
                    android:paddingHorizontal="@dimen/dp_8"
                    android:paddingVertical="@dimen/dp_4"
                    android:text="全麦"
                    android:textColor="#ffffffff"
                    android:textSize="8sp" />


            </LinearLayout>
        </RelativeLayout>

        <View
