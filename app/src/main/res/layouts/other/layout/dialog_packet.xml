<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_packet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_packet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/popup_packet_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_close_packet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_30"
            android:padding="@dimen/dp_5"
            android:src="@drawable/popup_packet_close" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_header_packet"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_56"
            android:layout_gravity="center_horizontal"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/default_head"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/tv_show_packet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginEnd="@dimen/dp_40"
            android:gravity="center_horizontal"
            android:text="--"

            android:textColor="#FFE456"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/iv_open_packet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_30"
            android:src="@drawable/popup_packet_open" />
    </LinearLayout>

</RelativeLayout>