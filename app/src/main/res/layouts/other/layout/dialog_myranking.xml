<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lucency"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@drawable/bg_round20_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_16"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_cai_myranking"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_cai_myranking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/tv_cai_ranking"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view_cai_myranking"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_2"
                        android:layout_below="@id/tv_cai_myranking"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_3"
                        android:background="@color/text_ff0" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_charm_myranking"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_charm_myranking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/tv_charm_ranking"
                        android:textColor="@color/white" />

                    <View
                        android:id="@+id/view_charm_myranking"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_2"
                        android:layout_below="@id/tv_charm_myranking"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_3"
                        android:background="@color/text_ff0"
                        android:visibility="invisible" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_close_myranking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:padding="@dimen/dp_5"
                android:src="@drawable/popup_close" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_list1_rank"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_day_myranking"
                android:layout_width="@dimen/dp_60"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_1"
                android:layout_marginBottom="@dimen/dp_1"
                android:background="@drawable/bg_left_black_rank"
                android:gravity="center"
                android:text="@string/tv_day_ranking"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:background="@color/textColor3" />

            <TextView
                android:id="@+id/tv_week_myranking"
                android:layout_width="@dimen/dp_60"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_1"
                android:layout_marginBottom="@dimen/dp_1"
                android:gravity="center"
                android:text="@string/tv_week_ranking"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@color/textColor3" />

            <TextView
                android:id="@+id/tv_all_myranking"
                android:layout_width="@dimen/dp_60"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_1"
                android:layout_marginEnd="@dimen/dp_1"
                android:layout_marginBottom="@dimen/dp_1"
                android:gravity="center"
                android:visibility="gone"
                android:text="@string/tv_all_ranking"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mRecyclerView_myranking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_4">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>