<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round20_top_fcf"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_close_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:padding="@dimen/dp_5"
            android:src="@drawable/popup_close" />

        <LinearLayout
            android:id="@+id/ll_name_reward"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/bg_round5_white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_15"
                android:text="@string/tv_reward_reward" />

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_name_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:drawablePadding="@dimen/dp_14"
                android:textColor="@color/text_ff0" />

            <ImageView
                android:id="@+id/iv_name_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:src="@drawable/list_arrows" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_number_reward"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/bg_round5_white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_15"
                android:text="@string/tv_rewardyou_reward" />

            <EditText
                android:id="@+id/edt_you_reward"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_80"
                android:background="@color/lucency"
                android:gravity="end|center_vertical"
                android:hint="0"
                android:inputType="number"
                android:maxLength="4"
                android:maxLines="1"
                android:paddingEnd="@dimen/dp_50"
                android:textColor="@color/black8" />

            <TextView
                android:id="@+id/tv_number_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:text="@string/tv_you"
                android:textColor="@color/black8" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_14">

            <TextView
                android:id="@+id/tv_numbershow_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/sp_30"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_numbershow_reward"
                android:layout_alignBottom="@id/tv_numbershow_reward"
                android:layout_toEndOf="@id/tv_numbershow_reward"
                android:text="@string/tv_you" />
        </RelativeLayout>

        <com.jingtaoi.yy.view.FlowLayout
            android:id="@+id/mFlow_reward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_5">

        </com.jingtaoi.yy.view.FlowLayout>

        <Button
            android:id="@+id/btn_reward"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginEnd="@dimen/dp_16"
            android:text="@string/tv_packet_reward"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginBottom="@dimen/dp_13"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_1"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_you_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/gold"
                android:padding="@dimen/dp_5"
                android:text="@string/tv_you"
                android:textColor="@color/black6"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_topup_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_25"
                android:drawableEnd="@drawable/recharge"
                android:drawablePadding="@dimen/dp_5"
                android:padding="@dimen/dp_5"
                android:text="@string/tv_topup"
                android:textColor="@color/FFAB32"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_1"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_list_reward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_all_reward"
            android:layout_width="@dimen/dp_170"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_110"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/bg_round4_whit41"
            android:minHeight="@dimen/dp_60"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_allmic_reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dp_10"
                android:text="@string/tv_all_gift"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mRecyclerView_reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10">

            </androidx.recyclerview.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>