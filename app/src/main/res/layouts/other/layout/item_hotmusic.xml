<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_clicker"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_60"
        android:textColor="@color/black8"
        android:textSize="@dimen/sp_14"
        android:text="音乐名"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_type_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name_music"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="#9FA3B0"
        android:text="音乐类型"
        android:textSize="@dimen/sp_12" />

    <ImageView
        android:id="@+id/iv_show_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_5"
        android:padding="@dimen/dp_5"
        android:src="@drawable/songbook_download" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_below="@id/tv_type_music"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@color/bg_line"
        />

</RelativeLayout>