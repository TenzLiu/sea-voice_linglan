<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_160"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_10">

    <TextView
        android:id="@+id/tv_time_pkhistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="--"
        android:textColor="@color/black6"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_time_pkhistory"
        android:layout_marginTop="@dimen/dp_12"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_13"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_62"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="@dimen/dp_62"
                    android:layout_height="match_parent">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/iv_oneimg_pkhistory"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_62"
                        fresco:actualImageScaleType="centerCrop"
                        fresco:placeholderImage="@drawable/default_head"
                        fresco:placeholderImageScaleType="centerCrop"
                        fresco:roundAsCircle="true" />

                    <TextView
                        android:id="@+id/tv_onetype_pkhistory"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_62"
                        android:background="@drawable/bg_round31_ban"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_pk_pkhistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="PK"
                        android:textColor="@color/black8"
                        android:textSize="@dimen/sp_20" />

                    <TextView
                        android:id="@+id/tv_endtime_pkhistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="0s"
                        android:textColor="@color/black6"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="@dimen/dp_62"
                    android:layout_height="match_parent">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/iv_twoimg_pkhistory"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_62"
                        fresco:actualImageScaleType="centerCrop"
                        fresco:placeholderImage="@drawable/default_head"
                        fresco:placeholderImageScaleType="centerCrop"
                        fresco:roundAsCircle="true" />

                    <TextView
                        android:id="@+id/tv_twotype_pkhistory"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_62"
                        android:background="@drawable/bg_round31_ban"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3">

                <TextView
                    android:id="@+id/tv_onename_pkhistory"
                    android:layout_width="@dimen/dp_62"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:singleLine="true"

                    android:textColor="@color/text_ff0"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold" />

                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_1"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_twoname_pkhistory"
                    android:layout_width="@dimen/dp_62"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/text_ff0"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_pkhistory"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_14"
                android:progressDrawable="@drawable/progress_bar_layer_list" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_onenumber_pkhistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:text="0"
                    android:textColor="@color/text_ff0"
                    android:textSize="@dimen/sp_10" />

                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_1"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_twonumber_pkhistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:text="0"
                    android:textColor="@color/text_ff0"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_pk_pkhistory"
                style="@style/ButtonStyle"
                android:layout_width="@dimen/dp_85"
                android:layout_height="@dimen/dp_32"
                android:layout_gravity="center_horizontal"
                android:text="再次Pk"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_type_pkhistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_5"
                android:text="--"
                android:textColor="@color/black8"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_line" />
</RelativeLayout>