<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_370"
    android:background="@drawable/bg_giftchat"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_gold_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14"
                android:drawableStart="@drawable/gold"
                android:drawablePadding="@dimen/dp_3"
                android:text="--"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_topup_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_toEndOf="@id/tv_gold_gift"
                android:drawableEnd="@drawable/recharge"
                android:drawablePadding="@dimen/dp_5"
                android:text="@string/tv_topup_gift"
                android:textColor="@color/FFAB00"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_data_gift"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_round5_ffo1"
                android:gravity="center"
                android:text="@string/tv_data_gift"
                android:textColor="@color/text_ff0"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/iv_packet_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginEnd="@dimen/dp_60"
                android:padding="@dimen/dp_5"
                android:src="@drawable/packet_gift"
                android:visibility="invisible" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nomal_gift"
                android:layout_width="@dimen/dp_60"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/tv_nomal_gift"
                android:textColor="@color/FF003F"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_12"
                android:layout_gravity="center_vertical"
                android:background="@color/white1" />

            <TextView
                android:id="@+id/tv_miracle_gift"
                android:layout_width="@dimen/dp_60"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/tv_miracle_gift"
                android:textColor="@color/white6"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_12"
                android:layout_gravity="center_vertical"
                android:background="@color/white1" />

            <TextView
                android:id="@+id/tv_exc_gift"
                android:layout_width="@dimen/dp_60"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/tv_exc_gift"
                android:textColor="@color/white6"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_12"
                android:layout_gravity="center_vertical"
                android:background="@color/white1" />

            <TextView
                android:id="@+id/tv_bao_gift"
                android:layout_width="@dimen/dp_60"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/tv_bao_gift"
                android:textColor="@color/white6"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_12"
                android:layout_gravity="center_vertical"
                android:background="@color/white1" />
        </LinearLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/mViewPager_gift"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_224">

        </androidx.viewpager.widget.ViewPager>

        <LinearLayout
            android:id="@+id/ll_indicator_gift"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal">

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10">

            <LinearLayout
                android:id="@+id/ll_send_gift"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@drawable/bg_round4_whit41"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_14"
                    android:text="@string/tv_send_gift"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_send_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_marginEnd="@dimen/dp_14"
                    android:drawableEnd="@drawable/unfold"
                    android:drawablePadding="@dimen/dp_9"
                    android:ellipsize="end"
                    android:maxEms="5"
                    android:maxLines="1"
                    android:text="--"
                    android:textColor="#EFBC2B"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@drawable/bg_round5_752_1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_number_gift"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="match_parent"
                    android:drawableEnd="@drawable/unfold"
                    android:gravity="center"
                    android:paddingEnd="@dimen/dp_8"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_sendto_gift"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_round4_right"
                    android:gravity="center"
                    android:text="@string/tv_sendto_gift"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_allmic_gift"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_allmic_gift"
            android:layout_width="@dimen/dp_170"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_42"
            android:background="@drawable/bg_round4_whit41"
            android:minHeight="@dimen/dp_80"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_allmic_gift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dp_10"
                android:text="@string/tv_all_gift"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mRecyclerView_gift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10">

            </androidx.recyclerview.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10" />
        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_number_gift"
        android:layout_width="@dimen/dp_170"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_42"
        android:background="@drawable/bg_round4_whit41"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mRecyclerView_number_gift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10">

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/tv_othernum_gift"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginEnd="@dimen/dp_7"
            android:layout_marginBottom="@dimen/dp_7"
            android:background="@drawable/bg_round5_752_1"
            android:gravity="center"
            android:text="自定义"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_nodata_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/tv_nodata_gift"
        android:textColor="@color/white6"
        android:textSize="@dimen/sp_12"
        android:visibility="invisible" />


</RelativeLayout>