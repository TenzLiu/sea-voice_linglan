<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:paddingVertical="@dimen/dp_20"
        android:background="@drawable/bg_round_black_18"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@string/tv_share"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14">

            <TextView
                android:id="@+id/tv_wechat_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/share_wechat"
                android:drawablePadding="@dimen/dp_1"
                android:gravity="center_horizontal"
                android:text="微信好友"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_wechatquan_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/share_moment"
                android:drawablePadding="@dimen/dp_1"
                android:gravity="center_horizontal"
                android:text="朋友圈"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_qq_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/share_qq"
                android:drawablePadding="@dimen/dp_1"
                android:gravity="center_horizontal"
                android:text="QQ"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_qzone_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/umeng_socialize_qzone"
                android:drawablePadding="@dimen/dp_1"
                android:gravity="center_horizontal"
                android:text="QQ空间"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_two_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_youyou_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/share_friend"
                android:drawablePadding="@dimen/dp_1"
                android:gravity="center_horizontal"
                android:text=" 深海好友"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_lian_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/share_link"
                android:drawablePadding="@dimen/dp_1"
                android:gravity="center_horizontal"
                android:text="复制链接"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="2" />
        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btn_cancel_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/bg_round_black_18"
        android:text="@string/tv_cancel"
        android:textColor="@color/textColor3"
        android:textSize="@dimen/sp_13" />
</LinearLayout>