<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000">

    <RelativeLayout
        android:id="@+id/rl_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/bg_round5_white">

        <TextView
            android:id="@+id/tv_hinttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:text="提示"
            android:textColor="#1C2023"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_hintshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hinttitle"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_32"
            android:layout_marginEnd="@dimen/dp_40"
            android:alpha="0.6"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp_6"
            android:text="提示内容"
            android:textColor="#000103"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:id="@+id/ll_show"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:paddingHorizontal="@dimen/dp_40"
            android:paddingBottom="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_below="@id/tv_hintshow"
            android:layout_marginTop="@dimen/dp_30">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/bg_round_black_18"
                android:textColor="#9FA3B0"
                android:text="取消"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_30"

                android:background="@drawable/bg_round_blue_18"
                android:text="确定"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_16"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp_18"
                android:background="@color/bg_line"

                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_below="@id/tv_hintshow"
            android:layout_marginStart="@dimen/dp_27"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_27"
           />

    </RelativeLayout>

</RelativeLayout>