<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000">

    <RelativeLayout
        android:id="@+id/rl_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/bg_round5_white">

        <TextView
            android:id="@+id/tv_hinttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:text="提示"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rl_cen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hinttitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_30">

            <TextView
                android:id="@+id/tv_hintshow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.6"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/dp_6"
                android:text="输入你想要赠送的礼物数："
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/edt_number"
                android:layout_width="@dimen/dp_120"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_hintshow"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:maxLength="4"
                android:maxLines="1"
                android:hint="1~9999"
                android:textColor="@color/black8" />

            <TextView
                android:id="@+id/tv_numbershow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_hintshow"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_15"
                android:alpha="0.3"
                android:text="目前拥有0个"
                android:visibility="invisible" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_show"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@id/rl_cen"
            android:layout_marginTop="@dimen/dp_20">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.6"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:text="取消"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_18"
                android:background="@color/bg_line" />

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:text="赠送"
                android:textColor="@color/C7521DF"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_below="@id/rl_cen"
            android:layout_marginStart="@dimen/dp_27"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_27"
            android:background="@color/bg_line" />

    </RelativeLayout>

</RelativeLayout>