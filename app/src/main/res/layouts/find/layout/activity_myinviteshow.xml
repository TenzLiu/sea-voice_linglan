<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#281cb1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_124"
        android:layout_margin="@dimen/dp_14"
        android:background="@drawable/bg_round5_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="当前奖励金额"
            android:textColor="@color/black8"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_showmon_myinvite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="0.00"
            android:textColor="@color/FF003F"
            android:textSize="@dimen/sp_28"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_showtype_myinvite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_showmon_myinvite"
            android:layout_centerHorizontal="true"
            android:text="--"
            android:textColor="@color/black6"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/tv_draw_myinvite"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_round15_start_red"
            android:gravity="center"
            android:text="@string/tv_draw_get"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_124"
        android:layout_margin="@dimen/dp_14"
        android:background="@drawable/bg_show_myinvite"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_number_myinvite"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/tv_number_myinvite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_24"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_number_myinvite"
                    android:layout_centerHorizontal="true"
                    android:text="我的邀请人数"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/line" />

        <RelativeLayout
            android:id="@+id/rl_mon_myinvite"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/tv_mon_myinvite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="0.00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_24"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_mon_myinvite"
                    android:layout_centerHorizontal="true"
                    android:text="我的分成奖励"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_14"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_inviteshow_myinvite"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_140"
            android:background="@drawable/bg_showone_myinvite"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:text="邀请奖励排行榜"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_13"
                android:text="只为等你\n不容错过"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/go1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_18"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/con_invite_myinvite"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:background="@drawable/bg_showtwo_myinvite">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="邀请大作战"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/textView3"
                    android:layout_alignBottom="@id/textView3"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/textView3"
                    android:text="规则"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView3"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/go2" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_14" />

            <RelativeLayout
                android:id="@+id/con_show_myinvite"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:background="@drawable/bg_showthree_myinvite">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="奖励秘籍"
                    android:textColor="@color/white"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView2"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/go3" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>