<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@drawable/bg_red_g" />

    <LinearLayout
        android:id="@+id/ll_show_invitenumber"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/sp_30"
        android:layout_marginEnd="@dimen/dp_5"
        android:background="@drawable/bg"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_number_invitenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_5"
                android:text="0.00"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="今日分成"
                android:textColor="@color/black6"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_allnumber_invitenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_5"
                android:text="0.00"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="总分成"
                android:textColor="@color/black6"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_show_invitenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_show_invitenumber"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="邀请明细"
        android:textColor="@color/black8"
        android:textSize="@dimen/sp_12" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mRecyclerView_invitenumber"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_show_invitenumber"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginBottom="@dimen/dp_50">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dp_4"
            android:layout_height="match_parent"
            android:background="@color/FF003F" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_weight="1"
            android:text="分享有奖励，邀请有惊喜"
            android:textColor="@color/black8"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_share_invitenumber"
            android:layout_width="@dimen/dp_66"
            android:layout_height="@dimen/dp_26"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/bg_round5_ffo1"
            android:gravity="center"
            android:text="立即分享"
            android:textColor="@color/FF003F"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>
</RelativeLayout>