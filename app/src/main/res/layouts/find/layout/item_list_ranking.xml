<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="@dimen/dp_22"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_10">

        <ImageView
            android:id="@+id/iv_gradeshow_ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/tv_gradeshow_ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_show_ranking"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_48"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/default_head"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundAsCircle="true" />

    <ImageView
        android:id="@+id/iv_sex_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/iv_show_ranking"
        android:layout_alignBottom="@id/iv_show_ranking"
        android:src="@drawable/sex_male" />

    <TextView
        android:id="@+id/tv_name_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_6"
        android:layout_toEndOf="@id/iv_show_ranking"
        android:text="--"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_show_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_6"
        android:layout_marginEnd="@dimen/dp_10"
        android:text="--"
        android:textColor="@color/FF003F"
        android:textSize="@dimen/sp_12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/bg_line"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@id/tv_name_ranking"
        />
</RelativeLayout>