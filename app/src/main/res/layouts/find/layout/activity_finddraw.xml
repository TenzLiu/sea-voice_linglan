<?xml version="1.0" encoding="utf-8"?>
<com.jingtaoi.yy.view.ScrollInterceptScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_alipay_draw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:background="@drawable/bg">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_10"
                android:src="@drawable/alipay" />

            <TextView
                android:id="@+id/tv_bind_draw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_70"
                android:text="@string/tv_bind_draw" />

            <TextView
                android:id="@+id/tv_alipayaccount_draw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/black8" />

            <TextView
                android:id="@+id/tv_alipayname_draw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_alipayaccount_draw"
                android:layout_alignStart="@id/tv_alipayaccount_draw"
                android:layout_marginTop="@dimen/dp_3" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_5"
                android:src="@drawable/list_arrows" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_show_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_28"
            android:text="@string/tv_show_draw"
            android:textColor="@color/black8"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_showmon_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_6"
            android:textColor="@color/black4"
            android:visibility="visible" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            android:visibility="visible">

            <EditText
                android:id="@+id/edt_mon_draw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/white"
                android:inputType="number"
                android:paddingStart="@dimen/dp_10"
                android:textColor="@color/black8"
                android:textSize="@dimen/sp_30"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dp_10"
                android:text="å…ƒ"
                android:textColor="@color/black8" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_draw"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_15"
            android:text="@string/tv_get_draw"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</com.jingtaoi.yy.view.ScrollInterceptScrollView>