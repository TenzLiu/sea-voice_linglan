<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1C2023"
            android:textSize="@dimen/sp_12"
            android:text="姓名" />

        <EditText
            android:id="@+id/edt_name_realname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:hint="请输入您的真实姓名"
            android:textColorHint="#9FA3B0"
            android:maxLength="4"
            android:maxLines="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/bg_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1C2023"
            android:textSize="@dimen/sp_12"
            android:text="身份证号" />

        <EditText
            android:id="@+id/edt_idcard_realname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:textColorHint="#9FA3B0"
            android:hint="请输入您的身份证号码"
            android:maxLength="18"
            android:maxLines="1" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/bg_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_15">

        <ImageView
            android:id="@+id/iv_choose_realname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_checkbox" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:text="阅读并同意"
            android:textColor="@color/black8"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_web_realname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《实名认证协议》"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_sure_realname"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginStart="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_72"
        android:layout_marginEnd="@dimen/dp_35"
        android:alpha="0.5"

        android:text="确认绑定" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_50"
        android:paddingEnd="@dimen/dp_50">

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0.5"
            android:layout_weight="1"
            android:visibility="invisible"
            android:background="@color/black6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_3"
            android:drawableLeft="@drawable/icon_shiming"
            android:textColor="#9FA3B0"
            android:textSize="@dimen/sp_12"
            android:text="实名认证说明" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0.5"
            android:layout_weight="1"
            android:visibility="invisible"
            android:background="@color/black6" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_10"
        android:text="@string/tv_show_realname"
        android:textColor="@color/black6"
        android:textSize="@dimen/sp_12"
        android:visibility="gone" />

    <WebView
        android:id="@+id/mWebview_realname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </WebView>
</LinearLayout>